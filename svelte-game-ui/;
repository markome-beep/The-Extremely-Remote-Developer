<script lang="ts">
	let props = $props();

	const angle = Math.PI / 3;
	let points: string = (() => {
		let points: string[] = [];
		for (let i = 0; i < 6; i++) {
			const x = 1 + Math.cos(i * angle);
			const y = 1 + Math.sin(i * angle);
			points.push(`${x},${y}`);
		}
		return points.join(' ');
	})();

	let fill = 'blue';
</script>

<div {...props}>
	<svg height="200" width="200">
		<polygon {points} {fill}> </polygon>
	</svg>
</div>
